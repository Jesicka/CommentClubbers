<div class="page-header">
	<h1><%= @user.full_name %></h1>
</div>
<div class="span1">
  <%= image_tag @user.gravatar_url %>
</div>

<% if @statuses %>
	<% @statuses.each do |status| %>
		<div class="well">
			<%= status.content %>
			<hr />
			<%= link_to time_ago_in_words(status.created_at), status_path(status) %> ago
		</div>
	<% end %>
<% end %>